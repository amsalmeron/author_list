<h1>Edit <%= "#{@book.title}" %></h1>

<%= form_with url:"/books/#{@book.id}", method: :post, local: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :page_count %>
    <%= f.text_field :page_count %>
    <%= f.label :fiction %>
    <%= f.check_box :fiction %>
    <%= f.submit 'Submit' %>
<% end%>